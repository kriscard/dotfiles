{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "model": "opus",
  "feedbackSurveyState": {
    "lastShownTime": 1754076483100
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/macos_notification.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/play_audio.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/macos_notification.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/play_audio.py awaiting_instructions"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/macos_notification.py"
          },
          {
            "type": "command",
            "command": "python3 ~/.dotfiles/.claude/hooks/play_audio.py awaiting_instructions"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ~/.claude/hooks/ts_lint.py"
          }
        ]
      }
    ]
  }
}
