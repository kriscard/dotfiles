      "",
      "function ${1:ComponentName}({ ${2:props} }) {",
      "  return (",
      "    <div>",
      "      ${0:// component content}",
      "    </div>",
      "  )",
      "}",
      "",
      "export default ${1:ComponentName}"
    ],
    "description": "Next.js Client Component with 'use client' directive (JavaScript)"
  }
