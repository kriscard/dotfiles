# =============================================================================
# GHOSTTY CONFIGURATION - Modern, Fast Terminal
# =============================================================================

# Theme Configuration
theme = dark:Catppuccin Macchiato,light:Catppuccin Latte

# =============================================================================
# FONTS & APPEARANCE
# =============================================================================

# Font Configuration (using Nerd Font from Brewfile)
font-family = MonoLisa
font-size = 14

# Font features
font-feature = +liga  # Enable ligatures
font-feature = +calt  # Enable contextual alternates

# =============================================================================
# SHELL INTEGRATION
# =============================================================================

shell-integration = zsh
shell-integration-features = cursor,sudo,title

# =============================================================================
# CURSOR CONFIGURATION
# =============================================================================

cursor-style = block
cursor-style-blink = true
# cursor-blink-interval = 500  # Removed: unknown field

# =============================================================================
# CLIPBOARD & SELECTION
# =============================================================================

clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard
# selection-foreground = none  # Removed: invalid value

# =============================================================================
# MACOS SPECIFIC SETTINGS
# =============================================================================

macos-option-as-alt = true
macos-titlebar-proxy-icon = hidden
macos-titlebar-style = tabs
macos-non-native-fullscreen = false

# =============================================================================
# WINDOW CONFIGURATION
# =============================================================================

# Window padding and sizing
window-padding-x = 8
window-padding-y = 6
window-width = 120
window-height = 30

# Window behavior
window-inherit-working-directory = true
window-new-tab-position = end
working-directory = home

# Split window appearance
unfocused-split-opacity = 0.85
resize-overlay = never

# =============================================================================
# MOUSE CONFIGURATION
# =============================================================================

mouse-scroll-multiplier = 3
mouse-hide-while-typing = true

# =============================================================================
# PERFORMANCE & BEHAVIOR
# =============================================================================

# Scrollback
scrollback-limit = 10000

# Performance
gtk-single-instance = false

# =============================================================================
# KEYBOARD SHORTCUTS
# =============================================================================

# Configuration management
keybind = cmd+comma=open_config
keybind = cmd+shift+r=reload_config

# Window management
keybind = cmd+t=new_tab
keybind = cmd+w=close_surface
keybind = cmd+n=new_window

# Pane/Split management (using cmd+s as prefix like tmux)
